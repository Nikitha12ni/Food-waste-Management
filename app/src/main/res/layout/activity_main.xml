<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:text="Username"
        android:textColor="#B35F7B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inEm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#249CFB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="133dp"
        android:layout_height="21dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="44dp"
        android:text="Password"
        android:textColor="#B6436B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inEm" />

    <EditText
        android:id="@+id/inPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#316B98"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/log"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#CC8AA0"
        android:text="LOGIN"
        android:textColor="#9E1111"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inPa" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="68dp"
        android:text="OR"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log" />

    <Button
        android:id="@+id/regis"
        android:layout_width="218dp"
        android:layout_height="59dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#C6859B"
        android:text="register"
        android:textColor="#CA2A2A"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>